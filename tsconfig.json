{
  "compilerOptions": {
    "target": "ES3",
    "module": "ESNext",
    "strict": true,
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
